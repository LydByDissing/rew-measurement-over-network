<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lydbydissing.gui.MainController">
   <top>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="REW Network Audio Bridge" />
         <Separator />
      </VBox>
   </top>
   
   <center>
      <HBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         
         <!-- Device Discovery Panel -->
         <VBox spacing="10.0" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-weight: bold;" text="Discovered Pi Devices" />
            
            <TableView fx:id="deviceTable" prefHeight="200.0">
               <columns>
                  <TableColumn fx:id="nameColumn" prefWidth="120.0" text="Device Name" />
                  <TableColumn fx:id="ipAddressColumn" prefWidth="100.0" text="IP Address" />
                  <TableColumn fx:id="statusColumn" prefWidth="80.0" text="Status" />
               </columns>
            </TableView>
            
            <HBox spacing="10.0">
               <Button fx:id="connectButton" onAction="#handleConnect" text="Connect" />
               <Button fx:id="disconnectButton" onAction="#handleDisconnect" text="Disconnect" />
               <Button fx:id="refreshButton" onAction="#handleRefresh" text="Refresh" />
               <Button fx:id="addDeviceButton" onAction="#handleAddDevice" text="Add Device..." />
            </HBox>
         </VBox>
         
         <!-- Status Panel -->
         <VBox spacing="10.0" prefWidth="300.0">
            <Label style="-fx-font-weight: bold;" text="Connection Status" />
            
            <GridPane hgap="10.0" vgap="5.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
               </columnConstraints>
               
               <Label text="Connection:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
               <Label fx:id="connectionStatusLabel" text="Not connected" GridPane.columnIndex="1" GridPane.rowIndex="0" />
               
               <Label text="Audio:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
               <Label fx:id="audioStatusLabel" text="No audio" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               
               <Label text="Level:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
               <ProgressBar fx:id="audioLevelIndicator" prefWidth="180.0" progress="0.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </GridPane>
            
            <Separator />
            
            <Label style="-fx-font-weight: bold;" text="Activity Log" />
            <TextArea fx:id="logTextArea" editable="false" prefHeight="150.0" wrapText="true" />
         </VBox>
      </HBox>
   </center>
   
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <Label text="REW Network Audio Bridge v0.1.0 - LydByDissing" style="-fx-text-fill: gray; -fx-font-size: 11px;" />
      </HBox>
   </bottom>
</BorderPane>